<h1>Users</h1>

<p><%= link_to 'Add a New User', new_user_url %></p>
<p><%= link_to 'Sign Up', new_user_url, class: 'btn btn-success' %></p>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Facebook access token</th>
      <th>Facebook</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.username %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.facebook_access_token %></td>
      <td><%= user.facebook_id %></td>
      <td><%= link_to ' Edit', edit_user_url(user), class: 'icon-edit' %></td>
      <td><%= link_to ' Destroy', user_url(user), method: 'delete', data: { confirm: "Do you really want to delete this user?" }, class: 'icon-trash' %></td>

    </tr>
  <% end %>
  </tbody>
</table>

