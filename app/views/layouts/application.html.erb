<!DOCTYPE html>
<html>
<head>
  <title>Friendbc</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= flash[:notice] %>
<%= flash[:error] %>

<% if @user.present? %>
Sign in as <%= User.find_by(id: session[:user_id]).username %>
<% else %>
<%= link_to 'Sign in', new_session_url %>
<% end %>


<%= yield %>

</body>
</html>
